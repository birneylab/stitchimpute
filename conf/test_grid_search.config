/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running a test of the grid_search workflow
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run birneylab/stitchimpute -profile test_grid_search,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Grid search test profile'
    config_profile_description = 'Runs a test of the grid search workflow'

    // Pipeline branch
    mode = "grid_search"

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    input  = "${projectDir}/assets/test_data/csv/samplesheet_minimal.csv"

    // Genome references
    genome          = null
    igenomes_ignore = true
    fasta           = "${projectDir}/assets/test_data/fasta/Oryzias_latipes.ASM223467v1.dna.primary_assembly.15:18000000-18001000_2_contigs.fa"

    // STITCH auxiliary files and parameters
    stitch_posfile     = "${projectDir}/assets/test_data/stitch/posfile_2_contigs.tsv"
    grid_search_params = "${projectDir}/assets/test_data/csv/grid_search.csv"

    // ground truth
    ground_truth_vcf    = "${projectDir}/assets/test_data/vcf/ground_truth.vcf.gz"
    downsample_coverage = 1e-5
    random_seed         = 1
}
